{% extends 'base.html.twig' %}
        {% block stylesheets %}
            <link rel="stylesheet" href={{asset('/css/programmeEleve/index.css')}}>
        {% endblock %}
{% block title %}Hello ProgrameEleveController!{% endblock %}

{% block body %}

{% for matiere in matieres %}
    <div class="cadre">
        <p class="titre">Cours : {{matiere.name}} - Formateur : {{matiere.formateurLastname}} {{matiere.formateurFirstname}}</p>
        <table>
            <tbody>
                <tr class="ligneblanche">
                    <td>Programmes</td>
                </tr>
                {% for programme in matiere.programmes %}
                <tr class="ligneblanche">
                    <td>{{programme.name}}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endfor %}
    
    
    


{% endblock %}
