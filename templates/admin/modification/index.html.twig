                        {% endfor %}
                    </select>
                </label>
                <label for="">Nom :
                    <input type="text" name="" id="">
                </label>
        
                <label for="">Prénom :
                    <input type="text" name="" id=""></label>

                <label for="">Mail :
                    <input type="text" name="" id="">
                </label>

                <label for="">Rôles :
                    <input type="text" name="" id="">
                </label>
            </form>
            <input class='submitInput' type="submit" value="Modifier">
        </div>
    </div>
{% endblock %}