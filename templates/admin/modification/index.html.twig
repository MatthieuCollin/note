{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href={{asset('css/admin/modification/index.css')}}>
{% endblock %}

{% block body %}
    <div class="content">
        <div class="box">
            {{form(form)}}
        </div>
        <div class="box">
            <form action="">
                <label for="">Utilisateur :
                    <select id="listeClasse">
                        {% set k = 10 %}
                        {% for user in users %}
