{% extends 'base.html.twig' %}

{% block title %}Controle index{% endblock %}

{% block body %}
    <h1>Controle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for controle in controles %}
            <tr>
                <td>{{ controle.id }}</td>
                <td>{{ controle.name }}</td>
                <td>
                    <a href="{{ path('app_ajout_controlle_show', {'id': controle.id}) }}">show</a>
                    <a href="{{ path('app_ajout_controlle_edit', {'id': controle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ajout_controlle_new') }}">Create new</a>
{% endblock %}
