{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href={{asset('css/crud/index.css')}}>
{% endblock %}
{% block title %}Classe{% endblock %}

{% block body %}
<div class="container">
    <div class="box">
        <h1>Classe</h1>
        <table>
            <thead>
                <th>Id</th>
                <th>Name</th>
                <th>Eleve</th>
                
            </thead>
            <tbody>
                <tr>
                    <td>{{ classe.id }}</td>
                    <td>{{ classe.name }}</td>
                    {% for eleve in eleves%}
                    <td>{{ eleve.lastname }}</td>
                    {% endfor %}
                </tr>
            </tbody>
        </table>
        <div class="align">
            <a class="button" href="{{ path('app_ajout_classe_index') }}">Retour a la liste</a>
        </div>
    </div>
</div>
{% endblock %}
